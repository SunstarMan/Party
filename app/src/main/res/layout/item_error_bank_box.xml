<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:background="@drawable/shape_search"
    android:paddingLeft="16dp"
    android:paddingTop="8dp"
    android:paddingRight="16dp"
    android:paddingBottom="8dp">

    <TextView
        android:id="@+id/item_error_bank_box_stem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="题干"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/item_error_bank_box_linear_options"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_error_bank_box_stem">

        <TextView
            android:id="@+id/item_error_bank_box_text_optionA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="A" />

        <TextView
            android:id="@+id/item_error_bank_box_text_optionB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="A" />

        <TextView
            android:id="@+id/item_error_bank_box_text_optionC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="A" />

        <TextView
            android:id="@+id/item_error_bank_box_text_optionD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A" />
    </LinearLayout>

    <TextView
        android:id="@+id/item_error_bank_box_text_answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="A"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_error_bank_box_linear_options" />
</androidx.constraintlayout.widget.ConstraintLayout>